<div class="question-item clearfix">
  <div class="row"> 

  <div class="col-3">
    <%= link_to "Upvote", question_upvote_question_path(id: question.id), method: :post, class: 'btn btn-success' %>
    <%= question.question_upvotes.count  %>
    <%= render :partial => "shared/favorite", locals: {question: question} %>
  </div> 
    

    <div class="col-9">

        <h5><%= link_to question.title, question_path(question) %></h5>
        <p><%= truncate(question.description, length: 100) %></p>
        <%= time_ago_in_words question.created_at %> ago
     
    </div>


  </div>
</div>

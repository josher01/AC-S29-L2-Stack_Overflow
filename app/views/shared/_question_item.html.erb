<div class="question-item clearfix">
  <div class="row"> 

  <div class="col-3">
    <%= render :partial => "shared/question_upvote", locals: {question: question} %>
    <br>
    <%= render :partial => "shared/favorite", locals: {question: question} %>
  </div> 
    

    <div class="col-9">
        <h5><%= link_to question.title, question_path(question) %></h5>
        <p><%= truncate(question.description, length: 100) %></p>
        <%= link_to question.user.name, user_path(question.user) %>
        -Asked <%= time_ago_in_words question.created_at %> 
     
    </div>


  </div>
</div>

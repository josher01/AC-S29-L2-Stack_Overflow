<% if answer.is_voted?(current_user) %>
  <div class="text-center">
    <i class='fa fa-sort-up fa-disabled'></i><br>
    <p class="h4"><%= answer.answer_upvotes.size %></p><br>
    <p class="h4">Votes</p><br>
    <%= link_to "<i class='fa fa-sort-down'></i><br>".html_safe, answer_downvote_question_answer_path(question_id: answer.question_id, id: answer.id), method: :post %><br>
  </div>
<% else %>
  <div class="text-center">
    <%= link_to "<i class='fa fa-sort-up'></i><br>".html_safe, answer_upvote_question_answer_path(question_id: answer.question_id, id: answer.id), method: :post %><br>
    <p class="h4"><%= answer.answer_upvotes.size %></p><br>
    <p class="h4">Votes</p><br>
    <i class='fa fa-sort-down fa-disabled'></i><br>
  </div>
<% end %>
